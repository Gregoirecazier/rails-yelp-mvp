<h2>Here's your restaurant</h2>

<ul>
    <li><%= @restaurant.name %></li>
    <li><%= @restaurant.address %></li>
    <li><%= @restaurant.phone_number %></li>
    <li><%= @restaurant.category %></li>

</ul>

<h3>Reviews</h3>
<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %> - Rating: <%= review.rating %></li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>


<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Go Back", restaurants_path %>
